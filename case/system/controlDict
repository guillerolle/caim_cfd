FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       latestTime; //startTime;

startTime       0;

stopAt          endTime;

deltaT          0.0002;

endTime         1.0;

writeControl    adjustableRunTime;

writeInterval   0.01;

purgeWrite      0;

adjustTimeStep  no;

maxCo           5;


writeFormat     ascii;

writePrecision  8;


runTimeModifiable true;

